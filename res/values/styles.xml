<resources>

    <style name="AppBaseTheme" parent="android:style/Theme.DeviceDefault.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:actionBarStyle">@style/ActionBar</item>
    </style>

    <style name="ActionBar" parent="android:Widget.DeviceDefault.Light.ActionBar">
        <item name="android:background">@color/translucent_background</item>
        <item name="android:backgroundSplit">@color/translucent_background</item>
        <item name="android:titleTextStyle">@style/Actionbar.Title</item>
    </style>

    <style name="Actionbar.Title" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/actionbar_text_color</item>
        <item name="android:textSize">@dimen/actionbar_text_size</item>
    </style>

</resources>